    <select id="getAll" parameterType="com.bhusk.black.model.CompanyInfo" resultType="com.bhusk.black.model.CompanyInfo">
        select id,companyName,`position`,remarks
        from info
        <trim prefix="where" prefixOverrides="and">
            and 1 = 1
            and enable = 'Y'
            <if test="common != null">
                and (
                companyName like CONCAT('%', TRIM(#{common}), '%')
                or `position` like CONCAT('%', TRIM(#{common}), '%')
                )
            </if>
        </trim>
        ORDER BY ID DESC
    </select>

    <select id="getMapIndexSearch" parameterType="com.bhusk.black.model.MapCompanyInfo" resultType="com.bhusk.black.model.MapCompanyInfo">
        select id,companyName,`position`,remarks
        from info
        <trim prefix="where" prefixOverrides="and">
            and 1 = 1
            and enable = 'Y'
            <if test="common != null">
                and (
                companyName like CONCAT('%', TRIM(#{common}), '%')
                or `position` like CONCAT('%', TRIM(#{common}), '%')
                )
            </if>
        </trim>
        ORDER BY ID DESC
    </select>

    <insert id="apiSubmitInfo" parameterType="com.bhusk.black.model.CompanyInfo"  useGeneratedKeys="true" keyProperty="id" >
        insert into info
        (position, companyName, remarks,enable,email)
        VALUES
        (TRIM(#{position}),TRIM(#{companyName}),TRIM(#{remarks}),'N',TRIM(#{email}));
    </insert>

